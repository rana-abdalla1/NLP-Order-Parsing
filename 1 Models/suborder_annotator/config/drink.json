{
    "dataset": "drink",
    "save_path": "./drink_model.pt",
    "predict_path": "drink_output.json",

    "dist_emb_size": 10,
    "type_emb_size": 10,
    "lstm_hid_size": 256,
    "conv_hid_size": 64,
    "bert_hid_size": 768,
    "biaffine_size": 256,
    "ffnn_hid_size": 64,
    "dilation": [1, 2],

    "emb_dropout": 0.3,
    "conv_dropout": 0.3,
    "out_dropout": 0.2,

    "epochs": 1,
    "batch_size": 8,

    "learning_rate": 1e-3,
    "weight_decay": 1e-5,
    "clip_grad_norm": 1.0,

    "bert_name": "bert-base-cased",
    "bert_learning_rate": 2e-5,
    "warm_factor": 0.05,

    "use_bert_last_4_layers": true,
    "seed": 42
}